programa
{
	
	funcao inicio()
	{
		inteiro numero
		
		escreva("Escreva um número: ")
		leia(numero)

		se  (numero % 2 == 0 e numero % 3 == 0) {
			escreva("Seu número é par e divisivel por 3")
		}
		senao {
			escreva("Seu número não é um par divisivel por 3")
		}
	}
}

